<div class="itemtitle">
  <h3>新闻管理</h3>
  <ul class="tab1">
    <li class="current"><a href="/article/list"><span>列表</span></a></li>
    <li><a href="/article/new"><span>添加</span></a></li>
  </ul>
</div>
<table class="tb tb2">
  <tbody>
    <tr class="header">
      <th>ID</th><th>标题</th><th>所属分类</th><th>发布人</th><th>添加时间</th><th>操作</th>
    </tr>
    <% for article in @articles %>
      <tr class="hover">
        <td><%=h article.id %></td>
        <td><a href="/index/show/<%=article.id%>" target="_blank"><%=h article.title %></a></td>
        <td><%=h article.category.name rescue nil %></td>
        <td><%=h article.author %></td>
        <td><%=h article.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td>
          <%= link_to '修改', :action => 'edit', :id => article %>
          <%= link_to '删除', { :action => 'destroy', :id => article }, :confirm => '确认要删除吗？', :method => :post %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>