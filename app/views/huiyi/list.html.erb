<div class="itemtitle">
  <h3>会议管理</h3>
  <ul class="tab1">
    <li class="current"><a href="/huiyi/list"><span>列表</span></a></li>
    <li><a href="/huiyi/new"><span>添加</span></a></li>
  </ul>
</div>
<table class="tb tb2">
  <tbody>
    <tr class="header">
      <th>ID</th><th>会议标题</th><th>发布人</th><th>添加时间</th><th>状态</th><th>发布状态</th><th>操作</th>
    </tr>
    <% 
	i = 0
	for huiyi in @huiyis
		i += 1
	%>
      <tr class="hover">
        <td><%=h i %></td>
        <td><%=h huiyi.title %></td>
        <td><%=h huiyi.author %></td>
        <td><%=h huiyi.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td>
          <%  if huiyi.status == 0 %>
            报名中
          <% elsif huiyi.status == 2  %>
            进行中
          <%  else %>已结束<%  end %>
        </td>
        <td>
          <%  if huiyi.ispub == 0 %>
            未发布
          <% elsif huiyi.ispub == 1  %>
            已发布
          <%  end %>
        </td>
        <td>
          <%= link_to '查看报名', :action => 'show', :id => huiyi %>
          <%= link_to '修改', :action => 'edit', :id => huiyi %>
          <%= link_to '删除', { :action => 'destroy', :id => huiyi }, :confirm => '确认要删除吗？', :method => :post %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>