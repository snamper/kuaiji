<div class="itemtitle">
  <h3>会议：<%= h  @huiyi.title %></h3>
    <ul class="tab1">
    <li><a href="/huiyi/list"><span>返回</span></a></li>
  </ul>
</div>
<table class="tb tb2">
  <tbody>
    <tr class="header">
      <th>ID</th><th>姓名</th><th>性别</th><th>工作单位</th><th>手机号码</th><th>返程订票</th><th>备注</th><th>操作</th>
    </tr>
    <% 
	i = 0
	for baoming in @huiyi.baomings
		i += 1
	%>
      <tr class="hover">
        <td><%=h i %></td>
        <td><%=h baoming.name %></td>
        <td><%=h baoming.sex %></td>
        <td><%=h baoming.workunit %></td>
        <td><%=h baoming.phone %></td>
        <td><%=h baoming.ticket %></td>
        <td><%=h baoming.remark %></td>
        <td>
          <%= link_to '修改', :action => 'editbm', :id => baoming %>
          <%= link_to '删除', { :action => 'destroybm', :id => baoming }, :confirm => '确认要删除吗？', :method => :post %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>