<tr><td class="td27" colspan="2">会议标题:</td></tr>
<tr class="noborder"><td class="vtop rowform">
<%= text_field 'huiyi', 'title',:class => 'txt'  %>
</td><td class="vtop tips2">会议标题</td></tr>

<tr><td class="td27" colspan="2">发布人:</td></tr>
<tr class="noborder"><td class="vtop rowform">
<%= text_field 'huiyi', 'author',:class => 'txt'  %>
</td><td class="vtop tips2">发布人</td></tr>

<tr><td class="td27" colspan="2">内容:</td></tr>
<tr class="noborder"><td class="vtop" style="width:70%">
<%= fckeditor_textarea 'huiyi', 'content', :width => '100%', :height => '500px'  %>
<%#= text_area 'huiyi', 'content', :class => 'tarea', :size => '50x6', :onkeyup => 'textareasize(this)'  %>
</td><td class="vtop tips2">内容</td></tr>

<tr><td class="td27" colspan="2">状态:</td></tr>
<tr class="noborder"><td class="vtop rowform">
<ul onmouseover="altStyle(this);">
  <li><%= radio_button("huiyi", "status", "0", :class => 'radio')  %> 报名中</li>
  <li><%= radio_button("huiyi", "status", "2", :class => 'radio')  %> 进行中</li>
  <li><%= radio_button("huiyi", "status", "1", :class => 'radio')  %> 已结束</li>
</ul></td><td class="vtop tips2">会议状态</td></tr>

<tr><td class="td27" colspan="2">发布状态:</td></tr>
<tr class="noborder"><td class="vtop rowform">
<ul onmouseover="altStyle(this);">
  <li><%= radio_button("huiyi", "ispub", "0", :class => 'radio')  %> 不发布</li>
  <li><%= radio_button("huiyi", "ispub", "1", :class => 'radio')  %> 发布到首页</li>
</ul></td><td class="vtop tips2">发布状态</td></tr>